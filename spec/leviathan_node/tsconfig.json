{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true, // Generates .d.ts files for type safety
    "declarationMap": true // Enables go-to-definition support
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
